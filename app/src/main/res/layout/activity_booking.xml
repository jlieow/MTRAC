<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/activity_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.portal.Booking">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Previous"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="@color/iconblue"
            android:layout_above="@+id/Previous"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Make a Booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Book"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="@color/iconblue"
            android:layout_above="@+id/Book"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Review Booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Review"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="@color/iconblue"
            android:layout_above="@+id/Review"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>
</RelativeLayout>
